{
    "verbose": true,
    "ignore": [
        ".git",
        "node_modules/**/node_modules"
    ],
    "watch": [
        "src/",
        "public/",
        "views/"
    ],
    "ext": "js,json,pug,ts",
    "exec": "node --enable-source-maps --inspect --require ts-node/register src/bin/serve.ts",
    "delay": 600
}
